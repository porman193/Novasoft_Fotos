@{
    var fullName = User.Claims.FirstOrDefault(c => c.Type == "FullName")?.Value;
    var initials = "?";
    var name = "?";
    var surname = "?";

    if (!string.IsNullOrEmpty(fullName))
    {
        var names = fullName.Split(' ');
        if (names.Length >= 2)
        {
            initials = $"{names[0][0]}{names[2][0]}".ToUpper();
            name = names[0];
            surname = names[2];
        }
        else
        {
            initials = string.Concat(names.Select(n => n[0])).ToUpper();
        }
    }


}
